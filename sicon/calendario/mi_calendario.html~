  <b>Date #1:</b> <input name="date1" id="sel1" size="30" type="text" /><input value=" ... " onclick="return showCalendar('sel1', '%Y-%m-%d [%W] %H:%M', '24', true);" type="reset" /> %Y-%m-%d [%W] %H:%M -- single
click<br />


  <b>Date #2:</b> <input name="date2" id="sel2" size="30" type="text" /><input value=" ... " onclick="return showCalendar('sel2', '%a, %b %e, %Y [%I:%M %p]', '12');" type="reset" /> %a, %b %e, %Y [%I:%M %p]
-- double click



  <b>Date #3:</b> <input name="date3" id="sel3" size="30" type="text" /><input value=" ... " onclick="return showCalendar('sel3', '%d/%m/%Y');" type="reset" /> %d/%m/%Y
-- single click
  <br />


  <b>Date #4:</b> <input name="date4" id="sel4" size="30" type="text" /><input value=" ... " onclick="return showCalendar('sel4', '%A, %B %e, %Y');" type="reset" /> %A, %B %e, %Y --
double click

</form>






